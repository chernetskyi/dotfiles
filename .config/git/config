[core]
  editor = nvim
  untrackedCache = true

[diff]
  tool = nvimdiff

[difftool]
  prompt = false

[fetch]
  prune = true
  prunetags = true

[gpg]
  format = ssh

[init]
  defaultBranch = main
  templateDir = ~/.config/git/templatedir

[merge]
  autoStash = true
  tool = nvimdiff2

[mergetool]
  prompt = false

[push]
  autoSetupRemote = true
  followtags = true

[rebase]
  autoStash = true
  autoSquash = true

; alias {{{
[alias]
  a    = add
  aa   = add --all
  af   = add --force
  b    = branch
  bl   = blame
  bs   = bisect
  c    = commit
  ca   = commit --amend --no-edit
  ce   = commit --amend
  cf   = config
  ch   = checkout
  cl   = clone --filter=blob:none
  cp   = cherry-pick
  d    = diff
  dd   = diff --staged
  ds   = diff --compact-summary
  dt   = difftool
  f    = fetch
  fu   = commit --fixup
  i    = init
  l    = log -n 10 --decorate --graph --format='%Cred%h %Cblue%cn %Cgreen%cr %Creset%s'
  ll   = log --decorate --graph --format='%Cred%h %Cblue%cn %Cgreen%cr %Creset%s'
  m    = merge
  ms   = merge --squash
  mt   = mergetool
  nb   = checkout -B
  pl   = pull --ff-only
  plf  = pull --force
  pop  = stash pop
  ps   = push
  psf  = push --force-with-lease --force-if-includes
  r    = rebase
  rank = shortlog -nse --no-merges
  rh   = reset --hard
  ri   = rebase --interactive
  rl   = reflog
  rm   = rm -r
  rmt  = remote
  root = rev-parse --show-toplevel
  rs   = reset --soft
  rv   = revert --no-edit
  rvh  = revert --no-edit HEAD
  s    = status --short
  sh   = show
  sl   = shortlog
  st   = stash
  sw   = switch
  t    = tag
  tf   = tag --force
; }}}

