[branch]
  sort = -committerdate

[core]
  editor = nvim
  untrackedCache = true

[diff]
  tool = nvimdiff

[difftool]
  prompt = false

[fetch]
  prune = true
  prunetags = true

[init]
  defaultBranch = main
  templateDir = ~/.config/git/templatedir

[merge]
  autoStash = true
  tool = nvimdiff2

[mergetool]
  prompt = false

[push]
  autoSetupRemote = true
  followtags = true

[rebase]
  autoStash = true
  autoSquash = true
  updateRefs = true

[alias]
  a    = add
  aa   = add --all
  af   = add --force
  b    = branch
  c    = commit
  ca   = commit --amend --no-edit
  ce   = commit --amend
  cl   = clone
  cp   = cherry-pick
  d    = diff
  dd   = diff --staged
  ds   = diff --compact-summary
  f    = fetch
  fu   = commit --fixup
  i    = init
  l    = ll -n 10
  ll   = log --decorate --graph --format='%Cred%h %Cblue%cn %Cgreen%cr %Creset%s'
  m    = merge
  ms   = merge --squash
  nb   = checkout -B
  pl   = pull --ff-only
  plf  = pull --force
  ps   = push
  psf  = push --force-with-lease --force-if-includes
  r    = rebase
  rank = shortlog -nse --no-merges
  rh   = reset --hard
  ri   = rebase --interactive
  rl   = reflog
  rm   = rm -r
  rmt  = remote
  root = rev-parse --show-toplevel
  rs   = reset --soft
  rst  = restore
  rv   = revert --no-edit
  rvh  = revert --no-edit HEAD
  s    = status --short
  sh   = show
  sw   = switch
  t    = tag
  tf   = tag --force
